{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "es2015"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"jsx": "react"
	},
	"include": ["src/**/*"]
}
